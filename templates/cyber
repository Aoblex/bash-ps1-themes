#!/bin/bash
scriptDir=$(dirname -- "$(readlink -f -- "$BASH_SOURCE")")
source $scriptDir'/../lib/lib'
prepare_colors

prompt_cmd() {
  TMP_GIT_BRANCH="$(gitbranch)"
  LINE_1="$(rgb_fg $palette_primary_dark)┌───( $(rgb_gradient $palette_gradient_start $palette_gradient_end ''$(current_user)@$HOSTNAME' )-[ '$(basename $PWD)' ]')"
  LINE_2="$(rgb_fg $palette_primary_dark)│ $(rgb_gradient $palette_gradient_start $palette_gradient_end $(short_datetime)) $(rgb_fg $palette_accent)~ $(rgb_fg $palette_secondary)$TMP_GIT_BRANCH"
  LINE_3="$(rgb_fg $palette_primary_dark)└─$(rgb_fg $palette_accent) λ $(rgb_fg $palette_text)"

  PS1="\r\n${LINE_1}\r\n${LINE_2}\r\n${LINE_3}"
}

export PROMPT_COMMAND='prompt_cmd'
