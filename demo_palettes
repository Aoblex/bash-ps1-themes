#!/bin/bash
scriptDir=$(dirname -- "$(readlink -f -- "$BASH_SOURCE")")
themesDir="${scriptDir}/themes"
palettesDir="${scriptDir}/palettes"
source $scriptDir'/lib/lib'

clear

printf "\033[48;5;4m"
center_string Palettes
no_color_esc

for FILE in $(ls $palettesDir); 
  do 
  if [ $FILE != 'README.md' ]
  then
    printf "\033[3m"
    printf "\033[48;5;17m"
    center_string $FILE
    no_color_esc
    echo 
    source $palettesDir/$FILE

    prepare_colors

    printf "Primary & Secondary\n\n"
    printf "Regular  "
    printf "$(rgb_bg_esc $palette_primary)   $(no_color_esc)  "
    printf "$(rgb_bg_esc $palette_secondary)   $(no_color_esc)      \n\n"
    printf "Dark     "
    printf "$(rgb_bg_esc $palette_primary_dark)   $(no_color_esc)  "
    printf "$(rgb_bg_esc $palette_secondary_dark)   $(no_color_esc)      \n\n"

    printf "Gradient\n\n"

    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end ' ')  $(no_color_esc)"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '  ')  $(no_color_esc)"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '   ')  $(no_color_esc)"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '    ')  $(no_color_esc)"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '       ')  $(no_color_esc) \n\n"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '          ')  $(no_color_esc)"
    printf "$(rgb_gradient_esc $palette_gradient_start $palette_gradient_end '                ')  $(no_color_esc)\n\n"

    printf "Primary Variants\n\n"
    printf "$(rgb_bg_esc $palette_variant_1)  $(no_color_esc)  "
    printf "$(rgb_bg_esc $palette_variant_2)  $(no_color_esc)  "
    printf "$(rgb_bg_esc $palette_variant_3)  $(no_color_esc)  -  "

    printf "$(rgb_bg_esc $palette_variant_1) $(no_color_esc)"
    printf "$(rgb_bg_esc $palette_variant_2) $(no_color_esc)"
    printf "$(rgb_bg_esc $palette_variant_3) $(no_color_esc)"
    printf '\n\n'

    printf "Accent\n\n"
    printf "Regular  "
    printf "$(rgb_bg_esc $palette_accent)  $(no_color_esc) $(rgb_fg_esc $palette_accent) $ λ $(no_color_esc)"
    printf '\n\n'
    printf "Dark     "
    printf "$(rgb_bg_esc $palette_accent_dark)  $(no_color_esc) $(rgb_fg_esc $palette_accent_dark) $ λ $(no_color_esc)"
    printf '\n\n'

    printf "$(rgb_fg_esc $palette_text)text color $(no_color_esc) "

    no_color_esc
    echo
    echo
  fi
done
